@model Movie
@{
    ViewData["Title"] = "Form";
    ViewBag.Title = "Add New Movie";
    String formAction = ViewBag.IsEditMode ? "UpdateMovie" : "CreateMovie";
    //@Debug.WriteLine(ViewBag.Ratings, "test")
  
}

<h2>@ViewBag.Title</h2>
<!--The following is the form to collect movie information-->
<form asp-action="@formAction">
    
    <input type="hidden" asp-for="MovieId" required />
    <div>
        <label  asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Category"))">
            <option value="">-- Select a Category --</option>
        </select>
    </div>

    <div>
        <label asp-for="Title" ></label>
        <input class="form-control" asp-for="Title" required />
    </div>

    <div>
        <label asp-for="Year"></label>
        <input class="form-control" asp-for="Year" type="number" min="1888" required />
    </div>

    <div>
        <label asp-for="Director"></label>
        <input class ="form-control" asp-for="Director"  />
    </div>

    <div>
        <label asp-for="Rating"></label>

        <select class ="form-control" asp-for="Rating" >
            <option value="">Select a rating</option> <!-- Placeholder for no selection -->
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited"></label>
        <select class="form-control" asp-for="Edited" required>
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
    </div>

    <div>
        <label asp-for="LentTo"></label>
        <input class="form-control" asp-for="LentTo" />
    </div>

    <div>
        <label asp-for="CopiedToPlex"></label>
        <select class="form-control" asp-for="CopiedToPlex" required>
            <option value="1">Yes</option>
            <option value="0">No</option>

        </select>
    </div>


    <div>
        <label asp-for="Notes"></label>
        <input class="form-control" asp-for="Notes" maxlength="25" />
    </div>

    <br />
    <button class="btn btn-dark" type="submit">Submit</button>
    <div asp-validation-summary="All"></div>
</form>

