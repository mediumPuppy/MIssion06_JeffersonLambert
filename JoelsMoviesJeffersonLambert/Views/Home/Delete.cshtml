@model JoelsMoviesJeffersonLambert.Models.Movie

<h1>Are you sure you want to delete Movie @Model.MovieId named @Model.Title ??</h1>
<ul style="list-style-type: none; display:inline-block">
    <li style="display: inline-block">
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.MovieId" />
            <button type="submit" class="btn btn-danger">Confirm</button>
        </form>
    </li>
    <li style="display: inline-block">
        <a asp-action="AllMovies" class="btn btn-light">
   Cancel</a></li>
</ul>